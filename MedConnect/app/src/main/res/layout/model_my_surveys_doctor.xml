<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"

    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/SurveyIDTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ID"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/nameTxt"
            android:textColor="@color/colorAccent" />

        <!--android:layout_alignParentRight="true"-->
        <!-- android:visibility="invisible" -->

        <TextView
            android:id="@+id/etQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question1"
            android:padding="10dp"
            android:layout_below="@+id/nameTxt"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/etQuestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question2"
            android:padding="10dp"
            android:layout_below="@+id/etQuestion1"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/etQuestion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question3"
            android:padding="10dp"
            android:layout_below="@+id/etQuestion2"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/etQuestion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question4"
            android:padding="10dp"
            android:layout_below="@+id/etQuestion3"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/etQuestion5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question5"
            android:padding="10dp"
            android:layout_below="@+id/etQuestion4"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>