<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"

    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/surveyIDTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ID"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/question1Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:text="Question 1"
            android:ems="10"
            />
        <TextView
            android:id="@+id/answer1Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Answer 1"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/question1Txt"
            android:ems="10"
            />

        <TextView
            android:id="@+id/question2Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Question 1"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/answer1Txt"
            android:ems="10"
        />

        <TextView
            android:id="@+id/answer2Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Answer 2"
            android:padding="10dp"
            android:layout_below="@+id/question2Txt"
            android:layout_alignParentLeft="true"
            android:ems="10"
            />

        <TextView
            android:id="@+id/question3Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Question 3"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/answer2Txt"
            android:ems="10"
            />

        <TextView
            android:id="@+id/answer3Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Answer 3"
            android:padding="10dp"
            android:layout_below="@+id/question3Txt"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/question4Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Question 4"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/answer3Txt"
            android:ems="10"
            />

        <TextView
            android:id="@+id/answer4Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Answer 4"
            android:padding="10dp"
            android:layout_below="@+id/question4Txt"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/question5Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Question 5"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/answer4Txt"
            android:ems="10"
            />

        <TextView
            android:id="@+id/answer5Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Answer 5"
            android:padding="10dp"
            android:layout_below="@+id/question5Txt"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>