<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <EditText
        android:id="@+id/etSurveyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Event Name"
        android:text="Survey name" />

    <EditText
        android:id="@+id/etQuestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSurveyName"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:text="Question 1" />

    <Button
        android:id="@+id/bCreateSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etQuestion3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Create Survey" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCreateSurvey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Cancel"
        android:textSize="15dp"
        android:visibility="visible" />






    <EditText
        android:id="@+id/etQuestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etQuestion1"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPassword|number"
        android:text="Question 2" />

    <EditText
        android:id="@+id/etQuestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etQuestion2"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPassword|number"
        android:text="Question 3" />




</RelativeLayout>