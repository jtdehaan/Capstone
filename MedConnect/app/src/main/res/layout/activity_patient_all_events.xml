<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="59dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/photocat" />

            <TextView
                android:id="@+id/etName"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:text="App Cat"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/bLogout"
                android:layout_width="96dp"
                android:layout_height="54dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:text="Logout"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="510dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHome"
            style="@style/CategoryStyle"
            android:background="@color/category_4"
            android:clickable="true"
            android:text="Home" />

        <TextView
            android:id="@+id/tvProfile"
            style="@style/CategoryStyle"
            android:background="@color/category_1"
            android:clickable="true"
            android:text="My Profile" />

        <TextView
            android:id="@+id/tvMyDoctor"
            style="@style/CategoryStyle"
            android:background="@color/category_3"
            android:clickable="true"
            android:text="My Doctor" />

        <TextView
            android:id="@+id/tvSurey"
            style="@style/CategoryStyle"
            android:layout_width="179dp"
            android:layout_height="80dp"
            android:background="@color/category_4"
            android:clickable="false"
            android:text="Surrveys" />

        <TextView
            android:id="@+id/tvMyEvents"
            style="@style/CategoryStyle"
            android:layout_height="169dp"
            android:background="@color/category_2"
            android:clickable="true"
            android:text="My Events" />



    </LinearLayout>


</LinearLayout>
