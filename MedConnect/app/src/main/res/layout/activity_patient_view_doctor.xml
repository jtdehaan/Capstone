<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="59dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradientbackground"
            android:orientation="horizontal">




        </LinearLayout>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/medlogo" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/teYourDoctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Doctors:"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/teDoctorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here is where all your doctors information wqill be displayed" />

        <Button
            android:id="@+id/bAddPatient"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@android:color/holo_red_dark"
            android:text="Add Doctor"
            android:textAlignment="center"
            android:textColor="@color/graylight" />

    </LinearLayout>


</LinearLayout>
