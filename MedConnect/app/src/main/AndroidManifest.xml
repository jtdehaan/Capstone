<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.medconnect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectionActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientActivity" />
        <activity android:name=".DoctorActivity" />
        <activity android:name=".RegisterOrganizationActivity" />
        <activity android:name=".RegisterPatientActivity" />
        <activity android:name=".RegisterDoctorActivity" />
        <activity android:name=".OrganizationActivity" />
        <activity android:name=".LoginDoctorActivity" />
        <activity android:name=".LoginPatientActivity"/>
        <activity android:name=".LoginOrganizationActivity"></activity>
    </application>

</manifest>